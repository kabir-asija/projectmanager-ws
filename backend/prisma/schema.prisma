generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Category {
  id    String @id @default(uuid())
  name  String
  color String
  tasks Task[]
}

model Tag {
  id    String @id @default(uuid())
  name  String
  color String
  tasks TaskTag[]
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  status       String
  dueDate      DateTime
  createdAt    DateTime @default(now())

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  tags TaskTag[]
}

model TaskTag {
  taskId String
  tagId  String

  task Task @relation(fields: [taskId], references: [id])
  tag  Tag  @relation(fields: [tagId], references: [id])

  @@id([taskId, tagId])
}
